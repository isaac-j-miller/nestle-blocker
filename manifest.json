{
  "manifest_version": 2,
  "name": "NestleBlocker",
  "version": "1.0",

  "description": "Hides Nestle products from grocery store websites",

  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["dist/content-script.js"]
    }
  ],
  "permissions": ["webRequestBlocking", "webRequest", "*://*/*"]
}
